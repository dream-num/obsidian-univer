{
  "git": {
    "commitMessage": "chore(release): release v${version}",
    "tagName": "${version}"
  },
  "npm": false,
  "github": {
    "release": true
  },
  "hooks": {
    "after:bump": ["pnpm build"]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": true
    }
  }
}

{
    "github": {
      "release": true
    },
    "git": {
      "commitMessage": "release: v${version}"
    },
    "npm": {
      "publish": true
    },
    "hooks": {
      "after:bump": "echo 更新版本成功"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "见文件",
        "infile": "CHANGELOG.md"
      }
    }
  }
